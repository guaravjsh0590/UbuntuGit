pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
              def name= "Gaurav"
              echo "hello $name"
              echo 'Building..'
                
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}
